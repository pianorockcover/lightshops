include views/partials/header/header.pug

.area
    .section
        .container-full
            +breadcrumbs([
                "Main", "Catalog", "Wear", "Women's clothing"
            ])
            .section-title Product Category Name
            +sortPanel("inline")
            .row
                .col-xl-3.col-xxl-2
                    +filters()
                .col-xl-9.col-xxl-10
                    .row
                        - for (let i = 0; i < 22; i++) {
                            .col-xl-6.col-xxl-4.pb-3
                                +product({
                                    inline: true
                                })
                        - }
        +pagination()

    +productsSlider("You Recent Views", "recentViews")

include views/partials/footer/footer.pug