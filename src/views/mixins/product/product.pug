mixin product(options)
    .product(data-product-id=options.id)
        .product-content
            .product-labels
                - for (let label of (options.labels || [])) {
                    .product-label(class= label.class)= label.text
                - }
            .product-favourite-icon(data-add-to-favourite)
            .product-image-wrapper
                .bi.bi-zoom-in.product-zoom-icon
                img.product-image(src=options.image, alt=options.name)
            .product-category(title= options.category)= options.category
            .product-title(title= options.name)= options.name
            .product-rate
                - for (let i = 0; i < 5; ++i) {
                    - if (i < options.rate) {
                        .bi.bi-star-fill.product-rate-star
                    - } else {
                        .bi.bi-star.product-rate-star
                    - }
                - }
            .product-price= options.price
            .product-buttons
                .btn.btn-secondary
                    .bi.bi-bag 
                    | Add to cart

