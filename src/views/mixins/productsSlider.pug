include ../mixins/product/product.pug

mixin productsSlider(title, id)
    .section.simple-slider-section
        .container
            .section-title= title
            .simple-slider(id= id data-slides-per-view=5 data-space-between=5)
                .swiper-container
                    .swiper-wrapper
                        - for (let i = 0; i < 20; i++) {
                            .swiper-slide
                                +product()
                        - }
                .swiper-button-prev
                .swiper-button-next