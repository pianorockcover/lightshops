include views/partials/header/header.pug

.area
    .section
        .container-full
            +breadcrumbs([
                "Main", "Blog", "Article"
            ])
            .row
                .col-xxl-9
                    +pageTitle()
                    +customContent({
                        isFull: true,
                        isArea: true,
                        inludeQuote: true,
                        inludeOL: true,
                        includeImage: true,
                    })
                .col-xxl-3
                    .mb-5
                        +saleBlock(
                            utils.faker.company.catchPhrase(),
                            utils.getUpload("announcement/2.jpeg"),
                            utils.faker.company.catchPhrase(),
                            40)
                    .simple-slider.simple-slider-aside.mb-5(id="asidePrductsSlider")
                        .simple-slider-aside-title Products from post
                        .swiper-container.pb-0
                            .swiper-wrapper
                                - for (let i = 0; i < 20; i++) {
                                    .swiper-slide
                                        .mb-3
                                            +product({
                                                inline: true
                                            })
                                        .mb-3
                                            +product({
                                                inline: true
                                            })
                                        +product({
                                            inline: true
                                        })
                                - }
                        .swiper-button-prev
                        .swiper-button-next
                    .mb-5
                        +announcement({
                            image: utils.getUpload("announcement/4.jpeg"),
                            mainTitle: `
                                <div class="announcement-main-title-smaller">It's time to</div>
                                <b>SAVE THE PLANET</b>
                            `,
                            description: `
                                <div class="text-thin">CHOOSE ORGANIC COSMETIC</div>
                            `,
                            btnText : "Shop Now",
                            btnClass: "btn-dark"
                        })
                    .mb-5
                        +announcement({
                            image: utils.getUpload("announcement/7.jpeg"),
                            mainTitle: `
                                <div class="announcement-main-title-smaller">Be ready to <b class="text-contrast">20% OFF</b></div>
                                for all <b class="text-uppercase">Technical brands</b>
                            `,
                            description: `
                                Just From <b>$90.00</b>
                            `,
                            tags: [
                                "study",
                                "technical",
                                "work",
                            ]
                        })
                    .mb-3
                        +category(
                            utils.faker.commerce.department(),
                            utils.getUpload("categories/1.svg", "default")
                        )
                    +category(
                        utils.faker.commerce.department(),
                        utils.getUpload("categories/3.svg", "default")
                    )
    .section
        .container-full
            +tabs([
                {
                    name: "You May Iike (10)",
                    contentId: "#youMayLike",
                    active: true,
                },
                {
                    name: "Personal Recommendations (7)",
                    contentId: "#personalRecommendations",
                }
            ])
            .tab-content#youMayLike
                +productsSlider(undefined, "youMayLikeSlider")
            .tab-content#personalRecommendations
                +productsSlider(undefined, "personalRecommendationsSlider")

include views/partials/footer/footer.pug