include components/partials/header/header.pug

.section
    .container-full
        .row
            .col-md-6.col-xxl-3.pb-3
                +announcement({
                    title: "70% OFF", 
                    subTitle: "fantastic sale",
                    image: utils.getUpload("announcement/2.jpg"),
                    bg: `background: linear-gradient(140deg, #1797df, #89c4ca);`,
                })
            .col-md-6.order-xxl-last.col-xxl-3.pb-3
                .sales-layout 
                    +saleBlock({
                        image: utils.getUpload("sale/1.png"),
                    })
                    +saleBlock({
                        type: "sale-block-warning",
                        image: utils.getUpload("sale/2.png"),
                    })
            .col-xl-12.col-xxl-6.pb-3
                +mainSlider()

+productsSlider("Top Sales", "topSales")

.section
    .container-full
        +titleLink("Best Sellers", "More Products")
        .row
            .col-xl-3.pb-3
                +announcement({
                    isVertical: true,
                    isBright: true,
                    image: utils.getUpload("announcement/10.jpg"),
                    btnClass: "btn-dark",
                    title: "35% OFF", 
                })

            .col-xl-9.pb-3
                .row
                    - for (let i = 0; i < 12; i++) {
                        div(class=utils.classNames.productsGrid).pb-3
                            +product()
                    - }

.section
    .container-full
        .section-title Buy right now
        +productFull()

.section
    .container-full
        .row
            .col-sm-6.col-xxl-3.pb-3
                +announcement({
                    title: "1 + 1 = 3", 
                    image: utils.getUpload("announcement/2.jpg"),
                })
            .col-sm-6.col-xxl-3.pb-3
                +announcement({
                    isBright: true,
                    title: "1 + 1 = GIFT", 
                    subTitle: "fantastic sale",
                    image: utils.getUpload("announcement/3.jpg"),
                    btnClass: "btn-dark",
                })
            .col-sm-6.col-xxl-3.pb-3
                +announcement({
                    image: utils.getUpload("announcement/5.jpg"),
                    bg: `background: linear-gradient(140deg, #00a649, #56a6c9);`,
                })
            .col-sm-6.col-xxl-3.pb-3
                +announcement({
                    isBright: true,
                    image: utils.getUpload("announcement/6.jpg"),
                })

+categories()

.section
    .container-full
        +titleLink("Technological innovations", "More Products")
        .row
            .col-xl-9.pb-3
                .row
                    - for (let i = 0; i < 12; i++) {
                        div(class=utils.classNames.productsGrid).pb-3
                            +product()
                    - }
            .col-xl-3.pb-3
                +announcement({
                    isVertical: true,
                    isBright: true,
                    image: utils.getUpload("announcement/7.jpg"), 
                    title: "15% OFF", 
                    btnClass: "btn-success",
                })

+productsSlider("Your Recent Views", "recentViews")

+articlesSlider("Our blog", "More articles", "ourBlog")

