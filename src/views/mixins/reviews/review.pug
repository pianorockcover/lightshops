mixin review()
    -
        const ava = utils.getUpload(`articles/author-${utils.randomInt(1, 4)}.jpeg`);
        const author = utils.faker.name.findName();
        const text = utils.faker.commerce.productDescription();
        const images = utils.uniqueArray((new Array(utils.randomInt(0, 5))).fill(null).map(() => utils.getUpload(`products/${utils.randomInt(1, 5)}.jpg`)));
        const date = `Jul 1st 2021`;
        const id = `review${+ new Date() + utils.randomInt(1, 9999999)}`;

    .review(id=id)
        .review-area
            .review-author
                img.review-author-image(src=ava alt="Review Author")
            .review-content
                .review-content-header
                    .review-content-header-left
                        .review-author-name=author
                        +rate()
                    .review-content-header-right
                        .review-date
                            .bi.bi-calendar3
                            | #{date}
                .review-content-body=text
                .review-content-footer
                    .review-customer-photos
                        - for (let image of images) {
                            a.review-customer-photo-link(href=image title="Customer photo")
                                img.review-customer-photo-image(src=image alt="Customer photo")
                        - }
