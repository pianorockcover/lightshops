.header-top
    .header-top-geo
        .header-top-label Location:
        .header-top-dropdown(data-toggle="#citiesDropdown" data-trigger="hover")
            | London
            +dropdown([
                {
                    title: "New York",
                    href: "#",
                }
            ], "citiesDropdown")
        .header-top-label Lang:
        .header-top-dropdown(data-toggle="#langsDropdown" data-trigger="hover")
            | En
            +dropdown([
                {
                    title: "French",
                    href: "#",
                },
                {
                    title: "Russian",
                    href: "#",
                }
            ], "langsDropdown")
    .header-top-account
        a.header-top-link.header-top-link-add(href=utils.anchor("favourites"))
            span.bi.bi-heart-fill
            .header-top-label Favourite (0)
        a.header-top-link.header-top-link-add(href=utils.anchor("compare"))
            span.bi.bi-reception-3
            .header-top-label Compare (1)
        a.header-top-link(href=utils.anchor("sign-in"))
            span.bi.bi-person
            .header-top-label Sign in
        .header-top-divider /
        a.header-top-link(href=utils.anchor("sign-up"))
            span.bi.bi-person-plus
            .header-top-label Sign up
        .header-top-link.header-open-right-sidebar(data-toggle="#headerBottom")
            span.bi.bi-list